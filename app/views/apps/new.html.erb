<%= form_for @app do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :name, { class: "form-label" } %><br>
        <%= form.text_field :name, { class: "form-control" } %>
        <% @app.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= form.label :number, { class: "form-label" }  %><br>
        <%= form.telephone_field :number, { class: "form-control" }  %><br>
        <% @app.errors.full_messages_for(:number).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

      <%= form.label :service %><br>
      <%= form.select :service, [ 'Haircut','Beard Trim','Hot Towel Shave', 'Hot Oil Beard Treatment', 'Hair Tattoo' ], :prompt => 'Select One' %>

      <div>
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
<%= link_to 'Employer view', apps_path, :class => "btn btn-secondary btn-lg btn-block" %>
